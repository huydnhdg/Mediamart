@model List<Mediamart.Areas.Admin.Data.ProductView>
@{
    ViewBag.Title = "Product";
    var index = 0;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Form</div>
                <div class="card-body">
                    @using (Html.BeginForm("UploadActive", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="input-group mb-3">
                            <div class="col-md-8">
                                <input type="file" name="UploadedFile" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="ti ti-upload"></i> Upload</button>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="col-md-6">
                                <a href="~/File/Mediamart_temp_active.xlsx" class="btn btn-outline-warning"><i class="ti ti-file"></i> File mẫu</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Database</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Description</th>
                                <th>Item no.</th>
                                <th>Product Name</th>
                                <th>Product Group Name</th>
                                <th>Product Group Code</th>
                                <th>Serial No.</th>
                                <th>Mã cào</th>
                                <th>Customer Name</th>
                                <th>Phone</th>
                                <th>Mobile phone</th>
                                <th>Address</th>
                                <th>Warranty Period</th>
                                <th>Warranty Starting Date</th>
                                <th>Warranty Ending Date</th>
                                <th>Sale Date</th>
                                <th>Nơi mua</th>
                                <th>Kênh kích hoạt</th>
                                <th>Kích hoạt bởi</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Model</td>
                                    <td>@item.ProductBase</td>
                                    <td>@item.Name</td>
                                    <td>@item.GroupName</td>
                                    <td>@item.ProductCate</td>
                                    <td>@item.Serial</td>
                                    <td>@item.Code</td>
                                    <td>@item.CusName</td>
                                    <td>@item.Active_phone</td>
                                    <td>@item.Active_phone</td>
                                    <td>@item.Address</td>
                                    <td>@item.Limited</td>
                                    <td>@item.Active_date</td>
                                    <td>@item.End_date</td>
                                    <td>@item.Buydate</td>
                                    <td>@item.BuyAdr</td>
                                    <td>@item.Active_chanel</td>
                                    <td>@item.Active_by</td>
                                    <td>
                                        @if (item.Id == 0)
                                        {
                                            <span>chưa lưu được</span>
                                        }
                                        else
                                        {
                                            <span>lưu thành công</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>

