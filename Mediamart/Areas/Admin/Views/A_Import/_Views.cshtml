@model Mediamart.Areas.Admin.Data.Accessary.A_Import_Model
@{
    int index = 0;
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Phiếu nhập linh kiện</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("", "", FormMethod.Post, new { area = "Admin", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            @Html.Label("Mã phiếu", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">@Model.Code </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Ngày tạo", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">@Model.Createdate</div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Người tạo", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">@Model.Createby</div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Ghi chú", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">@Model.Note</div>
                        </div>

                    </div>
                    <div class="col-md-12 access">
                        <table class="table table-bordered" >
                            <thead class="bg-danger" style="color:#fff">
                                <tr>
                                    <th>Mã LK</th>
                                    <th>Tên LK</th>
                                    <th>Model</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody id="tblBills">
                                @foreach (var item in Model.Items)
                                {
                                    index++;
                                    <tr>
                                        <td>@item.ProductCode</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductModel</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.GetValueOrDefault().ToString("N0")</td>
                                        <td>@item.Amount.GetValueOrDefault().ToString("N0")</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>


                <div class="form-group text-center">
                    <button class="btn btn-danger" data-dismiss="modal"><i class="ti ti-close"></i> Thoát</button>
                </div>

            </div>
        }
    </div>
</div>