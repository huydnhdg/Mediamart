@model Mediamart.Areas.Admin.Data.Accessary.A_Import_Model
@{
    ViewBag.Title = "Center";
    int index = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Form</div>
                <div class="card-body">
                    @using (Html.BeginForm("UploadFile", "A_Center", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="input-group mb-3">
                            <div class="col-md-8">
                                <input type="file" name="UploadedFile" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="ti ti-upload"></i> Upload</button>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="col-md-6">
                                <a href="~/File/Mediamart_temp_import.xlsx" class="btn btn-outline-warning"><i class="ti ti-file"></i> File mẫu</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Database</div>
                <div class="card-body">
                    <div class="form-group">
                        <p>Code: @Model.Code</p>
                        <p>Ghi chú: @Model.Note</p>
                        <p>Số lượng: @Model.Quantity</p>
                        <p>Thành tiền: @Model.Amount.ToString("N0")</p>
                    </div>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã LK</th>
                                <th>Tên LK</th>
                                <th>Model</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@item.ProductCode</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductModel</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.GetValueOrDefault().ToString("N0")</td>
                                    <td>@item.Amount.GetValueOrDefault().ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>

