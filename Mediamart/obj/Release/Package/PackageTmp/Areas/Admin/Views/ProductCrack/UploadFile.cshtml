@model List<Mediamart.Models.ProductCrack>
@{
    ViewBag.Title = "Product Crack";
    var index = 0;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Form</div>
                <div class="card-body">
                    @using (Html.BeginForm("UploadFile", "ProductCrack", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="input-group mb-3">
                            <div class="col-md-8">
                                <input type="file" name="UploadedFile" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="ti ti-upload"></i> Upload</button>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="col-md-6">
                                <a href="~/File/Mediamart_temp_crack.xlsx" class="btn btn-outline-warning"><i class="ti ti-file"></i> File mẫu</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Database</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên sản phẩm - Mã</th>
                                <th>Seri</th>
                                <th>Model</th>
                                <th>Trạng thái</th>
                                <th>Ghi chú</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Name @item.Code</td>
                                    <td>@item.Serial</td>
                                    <td>@item.Model</td>

                                    <td>
                                        @if (item.Status == 0)
                                        {
                                            <span class="text-danger">Bóc tách</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Huỷ</span>
                                        }
                                    </td>
                                    <td>@item.Note</td>
                                    <td>
                                        @if (item.ID == 0)
                                        {
                                            <span class="text-danger">chưa lưu</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Thành công</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>

